## -*- coding: utf-8 -*-
<!DOCTYPE html>
<html lang="${lang}">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="${description|h}">
    %if title == blog_title:
    <title>${blog_title|h}</title>
    %else:
    <title>${blog_title|h} - ${title|h}</title>
    %endif
    % if meta_generator_tag:
    <meta name="generator" content="Nikola (getnikola.com)">
    % endif
    <link rel="canonical" href="${abs_link(permalink)}">
    %if favicons:
    %for name, file, size in favicons:
    <link rel="${name}" href="${file}" sizes="${size}" />
    %endfor
    %endif
    %if prevlink:
    <link rel="prev" href="${prevlink}" type="text/html">
    %endif
    %if nextlink:
    <link rel="next" href="${nextlink}" type="text/html">
    %endif
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="text-base lg:text-lg text-stone-800 bg-stone-100">
    <a href="#content" class="sr-only sr-only-focusable">${messages("Skip to main content")}</a>

    <header class="bg-white">
        <style type="text/css">
            input#nav-toggle:checked~label#nav-show {
                display: none
            }

            input#nav-toggle:checked~label#nav-hide {
                display: flex
            }

            input#nav-toggle:checked~#nav-menu {
                display: flex
            }
        </style>
        <nav
            class="flex flex-wrap items-center justify-items-stretch mx-auto max-w-screen-2xl px-4 sm:px-5 xl:px-6 2xl:px-8 pb-4 sm:pb-0">
            <a class="flex items-center justify-self-start mt-4 mb-0 sm:mb-4 mr-4" href="https://ifcopenshell.org">
                <span class="">LOGO</span>
            </a>
            <input id="nav-toggle" type="checkbox" class="hidden">
            <label id="nav-show" for="nav-toggle"
                class="absolute inset-y-5 right-4 text-stone-800 sm:hidden hover:text-green-600">
                <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <title>Menu Open</title>
                    <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0V0z"></path>
                </svg>
            </label>
            <label id="nav-hide" for="nav-toggle"
                class="absolute inset-y-5 right-4 hidden text-stone-800 hover:text-green-600">
                <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <title>Menu Close</title>
                    <polygon points="11 9 22 9 22 11 11 11 11 22 9 22 9 11 -2 11 -2 9 9 9 9 -2 11 -2"
                        transform="rotate(45 10 10)"></polygon>
                </svg>
            </label>
            <ul id="nav-menu"
                class="justify-self-start hidden w-full space-x-4 sm:flex sm:w-auto sm:block mt-4 sm:mt-0">
                <li class="">
                    <a class="inline-block no-underline hover:-mb-2 hover:border-b-2 hover:border-green-600 active-link"
                        href="https://ifcopenshell.org">home</a>
                </li>
                <li>
                    <a class="inline-block no-underline hover:-mb-2 hover:border-b-2 hover:border-green-600"
                        href="">products</a>
                </li>
                <li>
                    <a class="inline-block no-underline hover:-mb-2 hover:border-b-2 hover:border-green-600"
                        href="">community</a>
                </li>
                <li>
                    <a class="inline-block no-underline hover:-mb-2 hover:border-b-2 hover:border-green-600"
                        href="">documentation</a>
                </li>
            </ul>
        </nav>
    </header>

    <main id="content"
        class="mx-auto grid h-screen max-w-screen-2xl grid-cols-2 gap-x-4 bg-blue-100 px-4 sm:px-5 xl:px-6 2xl:px-8 sm:grid-cols-4 md:grid-cols-6 lg:grid-cols-12 lg:gap-x-5 ">
        <div class="bg-rose-200">1</div>
        <div class="bg-rose-200">2</div>
        <div class="bg-rose-200">3</div>
        <div class="bg-rose-200">4</div>
        <div class="bg-rose-200">5</div>
        <div class="bg-rose-200">6</div>
        <div class="bg-rose-200">7</div>
        <div class="bg-rose-200">8</div>
        <div class="bg-rose-200">9</div>
        <div class="bg-rose-200">10</div>
        <div class="bg-rose-200">11</div>
        <div class="bg-rose-200">12</div>
    </main>

    <footer class="w-full border-t border-stone-300 mb-8 pt-8 text-sm text-left text-stone-500">
        <div class="flex flex-wrap items-center justify-between mx-auto max-w-screen-2xl px-4 sm:px-5 xl:px-6 2xl:px-8">
            <p class="w-full sm:w-auto">
                <a class="text-green-600">IfcOpenShell</a> is a free software project by amazing volunteers. You can <a
                    class="text-green-600">be one too</a>
                !
            </p>
            <div class="">
                <span class="">LOGO</span>
                <p><span>IfcOpenShell</span><br />The open source IFC toolkit and geometry engine</p>
            </div>
        </div>
    </footer>
</body>

</html>